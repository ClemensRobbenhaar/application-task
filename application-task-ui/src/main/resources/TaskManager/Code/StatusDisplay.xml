require(['jquery'], function(jq) { jq(function() {

try{

  var mainInput = document.getElementById('TaskManager.TaskManagerClass_0_progress')
  mainInput.addEventListener('change', function() {
     console.log('value changed', this.getAttribute('value'))
  })

  var inputs = document.getElementsByName('TaskManager.TaskManagerClass_0_progress')

  var disableSiblings = function(input) {
    var siblings = input.parentElement.childNodes
    for(var i=0; i&lt;siblings.length;i++) {
      var elem = siblings[i]
      if(elem.nodeType != elem.ELEMENT_NODE || elem.nodeName != 'DIV' || elem == input) continue
      jq(elem).addClass('inactive')
    }
  }

  for(var i=0; i&lt;inputs.length; i++) {
    var input = inputs[i];
    if (input.nodeName != 'DIV') continue
    input.addEventListener('click', function() {
       var $this = jq(this)
       if ($this.hasClass('inactive')) {
          $this.removeClass('inactive')
          disableSiblings(this)
       }
       mainInput.setAttribute('value', this.getAttribute('aria-valuenow'))
       var chg = document.createEvent('event')
       chg.initEvent('change')
       mainInput.dispatchEvent(chg)
    })
  }

} catch (e) {
console.log(e)
}

})})</code>
