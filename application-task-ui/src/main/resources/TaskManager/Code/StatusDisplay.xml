    <property>
      <code>div.sign {
  width: 20px;
  height: 20px;
  margin: 2px;
  border-radius: 10px;
  font-size: 0;
}

div.sign.stop {
  background-color: red;
}
div.sign.progress {
  background-color: yellow;
}
div.sign.done {
  background-color: green;
}

div.sign.inactive {
opacity:0.5;
}

div.form-uncontrol div.sign {
  box-shadow: 0px 0px 0px 2px grey;
  box-shadow: inset 0px 0px 0px 2px black;
}

div.form-uncontrol div.sign.inactive {
  box-shadow: none;
}
