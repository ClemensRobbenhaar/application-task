    <property>
      <code>require(['jquery'], function(jQ) {

  function recurrencySectionToggled() {
    var repeatSection = jQ('#RepeatedTaskManager_recurrencySection')
    if (repeatSection.hasClass('visible')) {
      jQ('#RepeatedTaskManager_recurrencySectionSwitch_open').hide()
      jQ('#RepeatedTaskManager_recurrencySectionSwitch_closed').show()
      jQ('#RepeatedTaskManager_isNew').attr('disabled', 'disabled')
    } else {
      jQ('#RepeatedTaskManager_recurrencySectionSwitch_closed').hide()
      jQ('#RepeatedTaskManager_recurrencySectionSwitch_open').show()
      // if we are about to open the section we only set the "save the new object" if the "active" checkbox is set
      recurrencySettingChanged()
    }
    repeatSection.toggle().toggleClass('visible')
  }

  function recurrencySettingChanged() {
    var repeatSetting = jQ('input[id="TaskManager.Code.RepeatedTaskClass_0_active"]')
    if (repeatSetting.prop('checked')) {
      jQ('#RepeatedTaskManager_isNew').removeAttr('disabled')
    } else {
      jQ('#RepeatedTaskManager_isNew').attr('disabled', 'disabled')
    }
  }

  function hookTaskEdit() {
    if (document.getElementById('RepeatedTaskManager_recurrencySection')) {
      jQ('#RepeatedTaskManager_recurrencySectionSwitch').on('click', recurrencySectionToggled);
      jQ('input[id="TaskManager.Code.RepeatedTaskClass_0_active"]').on('change', recurrencySettingChanged)
    }
    return true;
  }

  (XWiki &amp;&amp; XWiki.domIsLoaded &amp;&amp; hookTaskEdit()) || document.observe("xwiki:dom:loaded", hookTaskEdit);
})</code>
